<hr class="my-5">

<div class="row">
  <!-- Coluna esquerda: lista de reviews -->
  <div class="col-md-6">
    <h2 class="mb-4">Reviews</h2>

    <% if @reviews.any? %>
      <% @reviews.each do |review| %>
        <div class="mb-3">
          <!-- estrelinhas simples: repete "★" rating vezes -->
          <div class="text-warning mb-1">
            <%= "★" * review.rating %><%= "☆" * (5 - review.rating) %>
          </div>
          <p class="mb-1"><%= review.content %></p>
          <small class="text-muted">less than a minute ago</small>

          <div>
            <%= link_to "delete",
                        review_path(review),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "text-danger small" %>
          </div>

          <hr>
        </div>
      <% end %>
    <% else %>
      <p>No reviews yet.</p>
    <% end %>
  </div>

  <!-- Coluna direita: formulário -->
  <div class="col-md-6">
    <h2 class="mb-4">Add your review</h2>

    <%= simple_form_for [@list, @review] do |f| %>
      <%= f.input :content, label: "Comment *", placeholder: "Add your review here..." %>
      <%= f.input :rating,
                  label: "Rating *",
                  collection: 0..5,
                  as: :radio_buttons %>
      <%= f.submit "Create Review", class: "btn btn-success mt-2" %>
    <% end %>
  </div>
</div>
