<h1 class="mb-4">My lists</h1>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <% if list.image_url.present? %>
          <%= image_tag list.image_url, class: "card-img-top", alt: list.name %>
        <% end %>

        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= list.name %></h5>
          <p class="card-text text-muted">Some description here...</p>

          <div class="mt-auto">
            <%= link_to "View", list_path(list), class: "btn btn-primary btn-sm" %>

            <%= link_to "Delete",
                        list_path(list),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "btn btn-sm btn-danger ms-2" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Create a new list", new_list_path, class: "btn btn-success mt-3" %>
